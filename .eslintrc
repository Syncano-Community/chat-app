{
    "rules": {
        "indent": [
            "error", 2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        no-undef: 1
    },
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": ["eslint-plugin-html"],
    "extends": "eslint:recommended"
}
